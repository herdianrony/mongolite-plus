{
    "name": "herdianrony/mongolite-plus",
    "description": "MongoLitePlus adalah pustaka database ringan mirip MongoDB untuk PHP dengan backend SQLite. Mendukung fitur relasi, indeksasi, dan pengelolaan multi-database modular.",
    "keywords": [
        "php",
        "sqlite",
        "mongodb",
        "nosql",
        "database",
        "mongolite",
        "document-store"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rony Herdian",
            "email": "herdianrony@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "MongoLitePlus\\": "src/"
        }
    },
    "require-dev": {
        "pestphp/pest": "^3.8"
    },
    "autoload-dev": {
        "psr-4": {
            "MongoLitePlus\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
